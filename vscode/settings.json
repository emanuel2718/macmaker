{
  "editor.tabSize": 2,
  "editor.lineNumbers": "relative",
  "workbench.editor.showTabs": false,
  "editor.linkedEditing": true,
  "editor.fontFamily": "TerminessTTF Nerd Font Mono",
  "editor.fontSize": 18,
  "editor.fontLigatures": false,
  "editor.minimap.enabled": false,
  // "editor.suggest.insertMode": "replace",
  "editor.formatOnSave": true,
  "editor.stickyScroll.enabled": true,
  "editor.suggestSelection": "first",
  "editor.renderLineHighlight": "gutter",
  "editor.hideCursorInOverviewRuler": true,
  "editor.scrollBeyondLastLine": false,
  "editor.snippetSuggestions": "none",
  "editor.lightbulb.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line",
  "editor.mouseWheelZoom": true,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?_-",
  "editor.wordBasedSuggestions": false,
  "editor.renderWhitespace": "trailing",
  "editor.guides.indentation": false,
  "editor.accessibilitySupport": "off",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "off"
  },
  // "editor.codeActionsOnSave": {
  //   "source.organizeImports": true
  // },
  "files.exclude": {
    "**/*.bs.js": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.next": true,
    "**/__pycache__/**": true,
    "**/node_modules/": true,
    "**/npm-debug.log": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    ".mypy_cache/**": true,
    "vendor": true
  },
  "workbench.panel.defaultLocation": "bottom",
  "workbench.sideBar.location": "right",
  "breadcrumbs.filePath": "on",
  "breadcrumbs.enabled": true,
  "debug.openDebug": "neverOpen",
  "debug.showInStatusBar": "never",
  "debug.toolBarLocation": "hidden",
  "debug.console.fontSize": 15,
  "search.quickOpen.includeHistory": false,
  "search.searchEditor.defaultNumberOfContextLines": null,
  "search.smartCase": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "dist": true,
    "out": true,
    "coverage": true
  },
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "files.trimTrailingWhitespace": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "terminal.integrated.copyOnSelection": true,
  "zenMode.hideLineNumbers": false,
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "material-icon-theme",
  "settings.cycle": [
    {
      "id": "copilot",
      "overrideWorkspaceSettings": true,
      "values": [
        {
          "github.copilot.inlineSuggest.enable": false
        },
        {
          "github.copilot.inlineSuggest.enable": true
        }
      ]
    }
  ],
  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "security.workspace.trust.untrustedFiles": "open",
  "projectManager.git.baseFolders": [
    "$HOME/developer/personal",
    "$HOME/developer/work",
    "$HOME/developer/work"
  ],
  "projectManager.sortList": "Recent",
  "workbench.settings.editor": "json",
  "typescript.updateImportsOnFileMove.enabled": "prompt",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.linting.flake8Args": ["--max-line-length=120", "--max-complexity=12"],
  "python.linting.mypyEnabled": true,
  "python.formatting.provider": "black",
  "rust-analyzer.inlayHints.enable": false,
  "github.copilot.inlineSuggest.enable": false,
  "errorLens.statusBarColorsEnabled": true,
  "errorLens.margin": "6ch",
  "errorLens.fontWeight": "100",
  "errorLens.fontStyleItalic": true,
  "errorLens.fontSize": "13",
  // "errorLens.followCursor": "closestProblem",
  "errorLens.gutterIconsEnabled": true,
  // VIM Settings
  "vim.leader": "<space>",
  "vim.useSystemClipboard": false,
  "vim.useCtrlKeys": true,
  "vim.foldfix": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(255, 127, 0, 0.6)",
  "vim.highlightedyank.textColor": "black",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-j>": false,
    "<C-,>": false
  },
  // "vim.highlightedyank.color": "rgba(230, 97, 89, 0.7)",
  "vim.normalModeKeyBindingsNonRecursive": [
    // {
    //   "before": ["u"],
    //   "commands": ["undo"]
    // },
    // {
    //   "before": ["c-r"],
    //   "commands": ["redo"]
    // },
    {
      "before": ["leader", "f", "s"],
      "commands": [":w!"]
    },
    {
      "before": ["leader", "q"],
      "commands": [":q!"]
    },
    {
      "before": ["leader", "o"],
      "commands": [":x!"]
    },
    {
      "before": ["leader", "."],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["leader", "s", "p"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["leader", "m"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["leader", "n"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["<c-a>"],
      "after": ["g", "g", "V", "G"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["R"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marked.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marked.next"]
    },
    {
      "before": ["leader", ";"],
      "commands": ["settings.cycle.copilot"]
    },
    {
      "before": ["leader", "s", "i"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "key": "gd",
      "command": "editor.action.revealDefinition",
      "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
      "before": ["leader", "s", "d"],
      "commands": ["workbench.actions.view.problems"]
    },
    {
      "before": ["leader", "r"],
      "commands": ["editor.action.startFindReplaceAction"]
    },
    {
      "before": ["leader", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["leader", "h", "t"],
      "commands": ["workbench.action.selectTheme"]
    },
    {
      "before": ["u"],
      "after": [],
      "commands": [
        {
          "command": "undo"
        }
      ]
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": [
        {
          "command": "redo"
        }
      ]
    }
  ],
  "projectManager.projectsLocation": "$HOME/.config/Code/User/globalStorage/alefragnani.project-manager/projects.json",
  "editor.inlineSuggest.enabled": true,
  "cSpell.userWords": [
    "authed",
    "Chakra",
    "chatbox",
    "clustername",
    "composables",
    "emptychatbar",
    "extralight",
    "foldfix",
    "GROUPVIEW",
    "hookform",
    "kobalte",
    "LEAVECLUSTER",
    "linebreak",
    "passhphrase",
    "Petch",
    "pickone",
    "pinia",
    "vuejs",
    "webrtc",
    "zustand"
  ],
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.confirmSync": false,
  "playwright.reuseBrowser": false,
  "playwright.showTrace": true,
  "workbench.colorTheme": "Gruvbox Material Dark"
}
